# App Settings
APP_NAME=ClipConductor AI
APP_VERSION=1.0.0
DEBUG=true

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Settings
POSTGRES_SERVER=db
POSTGRES_USER=clipconductor
POSTGRES_PASSWORD=clipconductor123
POSTGRES_DB=clipconductor_ai
